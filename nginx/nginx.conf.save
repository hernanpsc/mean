    events {
        worker_connectios 1024;
    }
http {
    upstream frontend {
        server angular_app:80;
    }
    upstream backend {
        server express_app:5000;
    }
server {
    listen 80;
    server_name frontend;
    server_name backend;

    location {
        proxy_pass http://frontend;
        proxy_set_header Host $http_host;
    }

    location /api {
        rewrite ^/api/?(.*) /$1 break;
        proxy_pass http://backend;
        proxy_set_header Host $http_host; 
    }
    }
}
